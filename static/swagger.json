{
  "openapi": "3.0.0",
  "info": {
    "description": "Andy Collins",
    "version": "1.0.1",
    "title": "ado_queries",
    "contact": {
      "email": "andy.collins@thomsonreuters.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "ADO Queries",
      "description": "Example API for calling into the ADO API and getting specific and deeper information"
    }
  ],
  "paths": {
    "/ado_queries/api/v1.0/workitem": {
      "post": {
        "summary": "Returns work item data",
        "requestBody": {
          "description": "ADO Work Item Request POST Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/workItemRequestPostBody"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ado_queries/api/v1.0/cycletime": {
      "post": {
        "summary": "With a story query, will return a list of work item id, resolved date and first activated date for every story returned by the query",
        "requestBody": {
          "description": "ADO Query Request POST Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/queryRequestPostBody"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ado_queries/api/v1.0/history": {
      "post": {
        "summary": "Returns the history of a work item",
        "requestBody": {
          "description": "ADO Work Item Request POST Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/workItemRequestPostBody"
              }
            }
          }
        },
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "workItemRequestPostBody": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "format": "string"
          },
          "workitemid": {
            "type": "string",
            "format": "string"
          }
        }
      },
      "queryRequestPostBody": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "format": "string"
          },
          "path": {
            "type": "string",
            "format": "string",
            "description": "path to a query that returns user stories, i.e. My Queries/OnBalance Closed Stories"
          }
        }
      }
    }
  }
}